{
  "compilerOptions": {
    "outDir": "./transpiled/",
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@0xproject/types",
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/@0xproject/types/*",
        "node_modules/@0xproject/typescript-typings/types/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "types/*.ts",
    "utils/**/*.ts",
    "test/**/*.ts"
  ]
}
