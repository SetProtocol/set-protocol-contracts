{
  "compilerOptions": {
    "types": ["mocha"],
    "outDir": "./transpiled/",
    "sourceMap": true,
    "skipLibCheck": false,
    "noImplicitAny": false,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
        "@utils/*": [ "utils/*" ]
    },
    "rootDir": ".",
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@0xproject/types",
      "node_modules/set-protocol-utils/types",
      "node_modules/@types"
    ],
    "esModuleInterop": true
  },
  "include": [
    "types/*.ts",
    "utils/**/*.ts",
    "test/**/*.ts",
    "deployments/**/*.ts"
  ]
}
